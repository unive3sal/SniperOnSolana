    "@triton-one/yellowstone-grpc": "^5.0.1",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "jito-ts": "^3.0.1",
    "lru-cache": "^10.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
